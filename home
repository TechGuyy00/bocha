    <!-- Project Modal Overlay (New Feature) -->
    <!-- ==================================== -->
    <div id="project-modal" class="fixed inset-0 bg-gray-900 bg-opacity-75 z-[99] hidden flex items-center justify-center p-4 transition-opacity duration-300 opacity-0">
        <div class="bg-white rounded-2xl shadow-2xl max-w-4xl w-full max-h-full overflow-y-auto transform scale-95 transition-transform duration-300">
            <!-- Modal Header -->
            <div class="p-6 border-b border-gray-100 flex justify-between items-center">
