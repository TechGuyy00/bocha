    <!-- JavaScript for Interaction and LLM Integration -->
    <script>
        // Initialize Lucide Icons
        lucide.createIcons();

        // 1. Page Navigation Logic
        let currentPage = 'home';
        const pages = document.querySelectorAll('.page-content');
        const navLinks = document.querySelectorAll('.nav-link');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuButton = document.getElementById('mobile-menu-button');

        function navigate(targetPage) {
            currentPage = targetPage;
            
            // Hide all pages
            pages.forEach(page => page.classList.add('hidden'));
            
            // Show target page
            const targetElement = document.getElementById(targetPage + '-page');
            if (targetElement) {
                targetElement.classList.remove('hidden');
            }

            // Update active navigation link styling
            navLinks.forEach(link => {
                if (link.dataset.page === targetPage) {
                    link.classList.remove('text-gray-600', 'border-b-0');
                    link.classList.add('text-bocha-green', 'border-b-2', 'border-bocha-green');
                } else {
                    link.classList.add('text-gray-600');
                    link.classList.remove('text-bocha-green', 'border-b-2', 'border-bocha-green');
                }
            });

            // Close mobile menu if open
            mobileMenu.classList.add('hidden');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Set initial state
        navigate(currentPage); 

        // 2. "CALL SHEPHERD NOW!" Button Dropdown Logic (Home Page)
        const callButton = document.getElementById('call-shepherd-btn');
        const callOptions = document.getElementById('call-options');
        
        if (callButton) {
            callButton.addEventListener('click', () => {
                const isHidden = callOptions.classList.contains('hidden');
                if (isHidden) {
                    callOptions.classList.remove('hidden');
                    setTimeout(() => {
                        callOptions.classList.remove('scale-y-0');
                        callOptions.classList.add('scale-y-100');
                    }, 10); // Small delay to trigger transition
                } else {
                    callOptions.classList.add('scale-y-0');
                    setTimeout(() => {
                        callOptions.classList.add('hidden');
                    }, 300); // Wait for transition to finish before hiding
                }
            });
        }

        // 3. Form Submission Handling (Quote Page)
        const quoteForm = document.getElementById('quote-form');
        const formMessage = document.getElementById('form-message');
        
        if (quoteForm) {
            quoteForm.addEventListener('submit', function(event) {
                event.preventDefault(); 
                
                console.log('Quote Request Submitted:', {
                    name: document.getElementById('name').value,
                    service: document.getElementById('service').value,
                    contact: document.getElementById('contact').value,
                    description: document.getElementById('description').value
                });

                // Display success message and reset form
                quoteForm.reset();
                formMessage.classList.remove('hidden');
                
                // Auto-hide message after 5 seconds
                setTimeout(() => {
                    formMessage.classList.add('hidden');
                }, 5000);
            });
        }

        // 4. Mobile Menu Toggle
        if (mobileMenuButton) {
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }
        
        // 5. PROJECT MODAL LOGIC 
        function openModal(serviceName, imageUrl) {
            const modal = document.getElementById('project-modal');
            const modalTitle = document.getElementById('modal-title');
            const modalImage = document.getElementById('modal-image');
            const projectServiceName = document.getElementById('project-service-name');
            const imageFilename = document.getElementById('image-filename');
            
            // Set content
            modalTitle.textContent = `${serviceName} Project Example`;
            projectServiceName.textContent = serviceName;
            imageFilename.textContent = imageUrl;
            
            // Use placehold.co for a dynamic visual placeholder based on the service name
            const placeholderUrl = `https://placehold.co/800x450/4B5563/ffffff?text=${encodeURIComponent(serviceName.replace(/ /g, '+'))}`; 
            modalImage.src = placeholderUrl;
            modalImage.onerror = () => modalImage.src = `https://placehold.co/800x450/4B5563/ffffff?text=Image+Reference:+${imageUrl}`;

            // Show modal with transition
            modal.classList.remove('hidden');
            setTimeout(() => {
                modal.classList.remove('opacity-0');
                // Target the inner content div (the second child)
                modal.querySelector('div:nth-child(2)').classList.remove('scale-95');
                modal.querySelector('div:nth-child(2)').classList.add('scale-100');
            }, 10);
            
            // Disable body scrolling
            document.body.style.overflow = 'hidden';
            
            // Re-render lucide icons inside the modal
            lucide.createIcons();
        }

        function closeModal() {
            const modal = document.getElementById('project-modal');
            
            // Hide modal with transition
            modal.classList.add('opacity-0');
            modal.querySelector('div:nth-child(2)').classList.remove('scale-100');
            modal.querySelector('div:nth-child(2)').classList.add('scale-95');
            
            setTimeout(() => {
                modal.classList.add('hidden');
            }, 300); // Match CSS transition duration
            
            // Enable body scrolling
            document.body.style.overflow = '';
        }

        // Close modal on escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && !document.getElementById('project-modal').classList.contains('hidden')) {
                closeModal();
            }
        });

        // Close modal when clicking outside the content box
        document.getElementById('project-modal').addEventListener('click', function(e) {
            if (e.target.id === 'project-modal') {
                closeModal();
            }
        });
        
        // 6. "CALL SHEPHERD NOW!" Button Dropdown Logic (About Page)
        const callButtonAbout = document.getElementById('call-shepherd-about-btn');
        const callOptionsAbout = document.getElementById('call-options-about');
        
        if (callButtonAbout) {
            callButtonAbout.addEventListener('click', () => {
                const isHidden = callOptionsAbout.classList.contains('hidden');
                if (isHidden) {
                    callOptionsAbout.classList.remove('hidden');
                    setTimeout(() => {
                        callOptionsAbout.classList.remove('scale-y-0');
                        callOptionsAbout.classList.add('scale-y-100');
                    }, 10); // Small delay to trigger transition
                } else {
                    callOptionsAbout.classList.add('scale-y-0');
                    setTimeout(() => {
                        callOptionsAbout.classList.add('hidden');
                    }, 300); // Wait for transition to finish before hiding
                }
            });
        }

    </script>
</body>
</html>
